                                <div class="corner" id="corner-tr"></div>
                                <h3>What I Do</h3>
                                <p>Example........</p>
                                <div class="corner" id="corner-br"></div>
                                <div class="corner" id="corner-bl"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </section>

        <section class="s2">
            <div class="main-container">
                <div class="about-wrapper">
                    <div class="about-me">
                        <h4>More about me</h4>

                        <p> example</p>
                        <p> example</p>
                        <hr>
                        <h4>Tech Stack</h4>
                        <p>Jr Front End Developer with: <a target="_blank"
                                href="../public/Alejandro_pulido_FrontEnd.pdf">Download Resume</a></p>
                        <div id="skills">
                            <ul>
                                <li>HTML5/CSS3</li>
                                <li>JavaScript</li>
                                <li>React</li>
                                <li>Sass</li>
                                <li>Node.js</li>
                            </ul>

                            <ul>
                                <li>Express</li>
                                <li>Bootsrap</li>
                            </ul>
                        </div>


                    </div>

                    <!-- image slider auto -->

                    <!--image slider start  -->
                    <div class="slider">
                        <div class="slides">
                            <!-- radio buttons start -->
                            <input type="radio" name="radio-btn" id="radio1">
                            <input type="radio" name="radio-btn" id="radio2">
                            <input type="radio" name="radio-btn" id="radio3">
                            <!-- radio buttons end -->
                            <!-- slide images start -->
                            <div class="slide first">
                                <img src="../public/img/one.png" alt="" class="social_img">
                            </div>

                            <div class="slide">
                                <img src="../public/img/two.jpg" alt="" class="social_img">
                            </div>

                            <div class="slide">
                                <img src="../public/img/three.png" alt="" class="social_img">
                            </div>
                            <!-- slide images end-->
                            <!-- automatic navigation start -->
                            <div class="navigation-auto">
                                <div class="auto-btn1"></div>
                                <div class="auto-btn2"></div>
                                <div class="auto-btn3"></div>
                            </div>
                            <!-- automatic navigation end-->
                        </div>
                        <!-- manual navigation start  -->
                        <div class="navigation-manual">
                            <label for="radio1" class="manual-btn"></label>
                            <label for="radio2" class="manual-btn"></label>
                            <label for="radio3" class="manual-btn"></label>
                        </div>
                        <!-- manual navigation end -->
                    </div>
                    <!--image slider end  -->

                    <!-- end fo slide -->
                </div>
            </div>
        </section>

        <section class="s1">
            <div class="main-container">
                <h3 style="text-align: center;">Some of my projects</h3>

                <div class="post-wrapper">

                    <div>
                        <div class="post">
                            <img class="thumbnail" src="images\example.jpg" alt="">
                            <div class="post-preview">
                                <h6 class="post-title">Post title</h6>
                                <p class="post-intro">this is a sentece</p>
