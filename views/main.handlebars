    <body>

        <section class="s1">
            <div class="main-container">
                <div class="greeting-wrapper">
                    <h1>Hi, I'm Alejandro Pulido</h1>
                </div>

                <div class="intro-wrapper">
                    <div class="nav-wrapper">
